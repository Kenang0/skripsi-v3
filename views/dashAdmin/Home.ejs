<!-- tabel data tim internal -->
        <!-- tabel order -->
        <div class="table-container-tim-internal">
          <h2>Tim Internal</h2>
          <table class="data-tim-internal">
            <thead>
              <tr>
                <!-- isinya nanti photo dengan nama disamping -->
                <th>Nama</th>
                 <!--admin / partnershp / projek_lead / finance  -->
                <th>Role</th>
                <th>Email</th>
                <th>Nomor Tlp</th>
                <th>Alamat</th>
              </tr>
            </thead>
           
            
              <tbody>
                <% if (data.length === 0) { %>
                  <tr>
                    <td colspan="5" style="text-align:center;">Belum ada data tim internal.</td>
                  </tr>
                <% } else { %>
                  <% data.forEach(item => { %>
                    <tr>
                      <td>
                        <div style="display: flex; align-items: center;">
                          <img src="/foto/<%= item.photo_user %>" alt="foto<%= item.full_name %>" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; margin-right: 10px;">
                          <%= item.full_name %>
                        </div>
                      </td>
                      <td><%= item.role %></td>
                      <td><%= item.email %></td>
                      <td><%= item.nomor_tlp %></td>
                      <td><%= item.alamat %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
              
          
          </table>
        </div>
