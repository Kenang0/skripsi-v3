<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<style>
  input:invalid {
    border-color: red;
  }


  h1 {
    padding-top: 10px;
    text-align: center;
    color: rgb(8, 8, 8);
    margin-bottom: 30px;
  }

  form {
    background-color: white;
    max-width: 450px;
    margin: auto;
    padding: 20px;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  form div {
    margin-bottom: 10px;
  }

 

  .form-section h5 {
    margin-bottom: 10px;
    font-size: 1rem;
    color: #1e3a8a;
    font-weight: bold;
  }

  label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: #333;
  }

  input,
  select,
  textarea {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
    transition: border-color 0.3s ease;
  }

  input:focus,
  select:focus,
  textarea:focus {
    border-color: #7e3ff2;
    outline: none;
  }

  .error-text {
    margin-top: 5px;
    color: #dc2626;
    font-size: 0.85rem;
  }

  button[type="submit"] {
    width: 100%;
    background: linear-gradient(to right, #4455ef, #1c41b9);
    border: none;
    color: white;
    font-weight: bold;
    padding: 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  button[type="submit"]:hover {
    filter: brightness(1.1);
  }

  @media (max-width: 500px) {
  form {
    padding: 20px;
  }

  input,
  select,
  textarea {
    font-size: 13px;
    padding: 8px 10px;
  }

  button[type="submit"] {
    padding: 10px;
  }
}

</style>
<h1>Register Akun Internal</h1>

<form id="formRegister" action="/admin/dashboarAdmin/tambah-akun" method="POST">

  <!-- 🔹 Bagian Login -->
  <div class="form-section">
    <h5>Informasi Akun Login</h5>
    <div>
      <label for="email">Email:</label>
      <input type="email" name="email">
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" name="password">
    </div>
  </div>

  <!-- 🔹 Bagian Informasi Pribadi -->
  <div class="form-section">
    <h5>Informasi Pribadi</h5>
    <div>
      <label for="full_name">Nama Lengkap:</label>
      <input type="text" name="full_name">
    </div>
    <div>
      <label for="nomor_tlp">Nomor Telepon:</label>
      <input type="text" name="nomor_tlp">
    </div>
    <div>
      <label for="alamat">Alamat:</label>
      <textarea name="alamat" rows="2"></textarea>
    </div>
  </div>

  <!-- 🔹 Bagian Role -->
  <div class="form-section">
    <h5>Hak Akses</h5>
    <div>
      <label for="role">Role:</label>
      <select name="role" class="js-role">
        <option value="">-- Pilih Role --</option>
        <option value="admin">Admin</option>
        <option value="project-lead">Project Lead</option>
        <option value="finance">Finance</option>
        <option value="partnership">Partnership</option>
      </select>
    </div>
  </div>

  <button type="submit">Register</button>
</form>



<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("formRegister");

    
    $('.js-role').select2({
      dropdownAutoWidth: true,
      dropdownParent: $(form)
    });

    if (!form) return;

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      // Reset semua border dan pesan error
      document.querySelectorAll(".error-text").forEach(el => el.remove());
      document.querySelectorAll("input, select, textarea").forEach(el => el.style.border = "");

      let isValid = true;
      const emailInput = document.querySelector('[name="email"]');
      const email = emailInput.value.trim();

      // 🔍 Cek email ke server dulu
      try {
        const response = await fetch("/admin/cek-email", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email })
        });

        const result = await response.json();
        console.log("Cek email:", result);

        if (result.terdapatEmail) {
          isValid = false;
          emailInput.style.border = "1px solid red";

          const errMsg = document.createElement("div");
          errMsg.className = "error-text";
          errMsg.style.color = "red";
          errMsg.style.fontSize = "0.8rem";
          errMsg.innerText = "Email sudah digunakan.";
          emailInput.insertAdjacentElement("afterend", errMsg);
        }
      } catch (err) {
        console.error("❌ Gagal fetch cek email:", err);
        return;
      }

      if (!isValid) return;

      // ✅ Kalau email aman, lanjut cek field lainnya
      const fields = ["email", "password", "full_name", "nomor_tlp", "alamat", "role"];
      fields.forEach((name) => {
        const input = document.querySelector(`[name="${name}"]`);
        const value = input.value.trim();

        if (!value) {
          isValid = false;
          input.style.border = "1px solid red";

          const errMsg = document.createElement("div");
          errMsg.className = "error-text";
          errMsg.style.color = "red";
          errMsg.style.fontSize = "0.8rem";
          errMsg.innerText = `Kolom ${name.replace("_", " ")} wajib diisi`;
          input.insertAdjacentElement("afterend", errMsg);
        }
      });


      if (!isValid) return;

      // 🚀 Kirim form kalau semua lolos
      e.target.submit();
      alert("Panambahan akun Berhasil");
    });
  });
</script>