<style>
    .produk-list tbody tr:nth-child(even) {
        background-color: #fceef1;
    }

    .badge-count {
        background-color: #0d6efd;
    }

    .sidebar-card {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
    }

    .btn-promote {
        background-color: #6c757d;
        color: #fff;
    }

    .btn-promote:hover {
        background-color: #5a6268;
    }

    tr.baris-pemesanan:hover {
        background-color: #7893cf;
        cursor: pointer;
    }

   tr.baris-pemesanan.active {
    background-color: #dbeafe !important;
    font-weight: 600;
    border-left: 4px solid #0d6efd;
}
tr.baris-pemesanan {
    transition: background-color 0.3s ease;
}
.judul-list {
  border: 1px solid #dee2e6;
  border-bottom: none;
  border-radius: 0.375rem 0.375rem 0 0;
  background: rgb(197, 196, 196);
  padding: 12px 16px;
  font-weight: bold;
}
</style>

<body class="bg-light">

    <div class="container my-4">
  <div class="row">
    <!-- KIRI -->
    <div class="col-lg-8">
      <h5 class="judul-list" >List Permintaan</h5>
      <table class="table produk-list">
        <thead>
          <tr>
            <th>Nama Produk</th>
            <th>Jumlah</th>
            <th>Tanggal</th>
            <th>User</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <!-- Pemesanan 1 -->
          <tr class="baris-pemesanan" data-detail='{
            "foto": "/uploads/produk_img/p1.jpg",
            "masking": "NGIKLANMURAH",
            "tanggal": "27 Mei 2025",
            "jam": "09.00 - 11.00 WIB",
            "teks": "Promo Lebaran! Dapatkan diskon hari ini!"
          }'>
            <td>Produk SMS Lebaran</td>
            <td>1000</td>
            <td>26 Mei 2025</td>
            <td>
              <div class="d-flex align-items-center">
                <img src="/uploads/user_foto/u1.jpg" class="rounded-circle me-2" width="30" height="30">
                <span>Miftah</span>
              </div>
            </td>
            <td><span class="badge bg-warning">menunggu</span></td>
            <td><i class="bi bi-eye text-muted"></i></td>
          </tr>

          <!-- Pemesanan 2 -->
          <tr class="baris-pemesanan" data-detail='{
            "foto": "/uploads/produk_img/p2.jpg",
            "masking": "TOKOKU",
            "tanggal": "21 Des 2025",
            "jam": "14.00 - 15.00 WIB",
            "teks": "Diskon akhir tahun! Beli sekarang juga!"
          }'>
            <td>MMS Diskon Akhir Tahun</td>
            <td>500</td>
            <td>20 Des 2025</td>
            <td>
              <div class="d-flex align-items-center">
                <img src="/uploads/user_foto/u2.jpg" class="rounded-circle me-2" width="30" height="30">
                <span>Amanda</span>
              </div>
            </td>
            <td><span class="badge bg-success">disetujui</span></td>
            <td><i class="bi bi-eye text-muted"></i></td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- KANAN -->
    <div class="col-lg-4">
      <div id="detailPemesananKanan" class="border rounded bg-white p-3 d-none">
        <h6 class="text-muted mb-3">Detail Pemesanan</h6>
        <div id="konten-detail-kanan" class="small text-dark">
          <!-- Diisi oleh JS -->
        </div>
      </div>
    </div>
  </div>
</div>




    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<script>
  const detailBox = document.getElementById("detailPemesananKanan");
  const kontenBox = document.getElementById("konten-detail-kanan");

  document.querySelectorAll(".baris-pemesanan").forEach(row => {
    row.addEventListener("click", function () {
      // Hapus semua yang aktif dulu
      document.querySelectorAll(".baris-pemesanan").forEach(r => r.classList.remove("active"));
      this.classList.add("active");

      const data = JSON.parse(this.dataset.detail);

      const isiHTML = `
        <img src="${data.foto}" class="img-fluid rounded mb-3" style="max-width: 100%;">
        <p><strong>Masking:</strong> ${data.masking}</p>
        <p><strong>Tanggal Pengiriman:</strong> ${data.tanggal}</p>
        <p><strong>Jam Pengiriman:</strong> ${data.jam}</p>
        <p><strong>Teks Iklan:</strong><br>${data.teks}</p>
      `;
      kontenBox.innerHTML = isiHTML;
      detailBox.classList.remove("d-none");
    });
  });
</script>
</body>