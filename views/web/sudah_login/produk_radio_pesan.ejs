  eventDidMount: function (info) {
  const hariBoleh = "<%= produk.hari %>".toLowerCase().split(",").map(h => h.trim());
  const startDate = new Date(info.event.start);
  startDate.setHours(0, 0, 0, 0);
  const hariIndo = ["minggu", "senin", "selasa", "rabu", "kamis", "jumat", "sabtu"];
  const namaHari = hariIndo[startDate.getDay()];

  // Hari tidak tersedia
  if (!hariBoleh.includes(namaHari)) {
    info.el.style.backgroundColor = "#f8d7da";
    info.el.style.color = "#842029";
    info.el.style.border = "1px solid #dc3545";
    info.el.title = "Hari tidak tersedia";
  }

  // Tanggal terlalu dekat (hari ini sampai 2 hari ke depan)
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const minDate = new Date(today);
  minDate.setDate(today.getDate() + 3);

  if (startDate < minDate) {
   info.el.style.backgroundColor = "#f8d7da";
    info.el.style.color = "#842029";
    info.el.style.border = "1px solid #dc3545";
    info.el.style.opacity = 1;
    info.el.title = "Tidak bisa dipilih, minimal 3 hari ke depan";
  }

    // ðŸ–±ï¸ Tambahkan handler double click
  if (info.event.title === "Dipilih") {
    info.el.addEventListener("dblclick", function () {
      // Hapus event dari kalender
      info.event.remove();

      // Hapus dari selectedSlots
      selectedSlots = selectedSlots.filter(s => s.start !== info.event.startStr || s.end !== info.event.endStr);

      // Hapus dari hidden input
      const hiddenInputs = document.querySelectorAll("input[name='slot_dipilih[]']");
      hiddenInputs.forEach(input => {
        const val = JSON.parse(input.value);
        if (val.start === info.event.startStr && val.end === info.event.endStr) {
          input.remove();
        }
      });
    });
  }
},

      eventContent: function(arg) {
