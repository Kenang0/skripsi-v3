const today = new Date();
today.setHours(0, 0, 0, 0);
const limitDate = new Date(today);
limitDate.setDate(today.getDate() + 2);
const pickedDate = new Date(info.start);
pickedDate.setHours(0, 0, 0, 0);

if (!hariBoleh.includes(namaHari) || pickedDate <= limitDate) {
  let pesan = "";

  if (!hariBoleh.includes(namaHari)) {
    pesan = `Hari ${namaHari.charAt(0).toUpperCase() + namaHari.slice(1)} tidak tersedia untuk produk ini.`;
  } else {
