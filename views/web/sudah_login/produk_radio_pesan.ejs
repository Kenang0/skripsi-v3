    tanggalBoleh.setDate(today.getDate() + 3);

    const tanggalBolehString = tanggalBoleh.toLocaleDateString("id-ID", {
      weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
    });
    pesan = `Anda hanya bisa memilih slot mulai dari ${tanggalBolehString}.`;
  }

  Swal.fire({
    icon: 'warning',
    title: 'Tanggal tidak valid',
    text: pesan,
    confirmButtonText: 'Oke',
    confirmButtonColor: '#3085d6'
  });
  calendar.unselect();
  return;
}



          if (pickedDate <= limitDate) {
          Swal.fire({
          icon: 'warning',
          title: 'Tanggal tidak valid',
          text: 'Anda hanya bisa memilih tanggal mulai dari 3 hari ke depan.',
          confirmButtonText: 'Oke',
          confirmButtonColor: '#3085d6'
          });
          calendar.unselect();
          return;
        }

        if (durasiDipilih > slotDuration) {
          Swal.fire({
            icon: 'warning',
            title: 'Slot tidak valid',
            text: `Silakan klik 1 kali pada slot waktu yang diinginkan. Jangan klik dan seret (drag).`,
            confirmButtonText: 'Oke',
            confirmButtonColor: '#3085d6'
          });
          calendar.unselect();
          return;
        }

        if (selectedSlots.length >= max) {
          Swal.fire({
            icon: 'warning',
            title: 'Maksimum slot pemesanan tercapai ',
            text: `Anda sudah memilih ${max} slot tayang. Jika ingin menambah slot, silakan tambahkan jumlah pemesanan terlebih dahulu.`,
            confirmButtonText: 'Oke',
            confirmButtonColor: '#3085d6'
          });
          calendar.unselect();
          return;
        }

        const slot = { start: info.startStr, end: info.endStr };
        selectedSlots.push(slot);
        tambahHiddenInput(slot);

        calendar.addEvent({
          start: info.startStr,
          end: info.endStr,
          title: 'Dipilih',
          color: '#0d6efd'
        });
      }
    });

