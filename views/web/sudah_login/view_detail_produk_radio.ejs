        .navbar {
            background-color: rgba(255, 255, 255, 0.95);
            border-bottom: 1px solid #eee;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
        }

        .navbar.scrolled {
            background-color: rgb(255, 255, 255);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }


        .navbar a {
            transition: all 0.3s ease;
            text-decoration: none;
        }

        /* Hover untuk nav menu dan ikon */
        .navbar a:hover {
            color: #0d6efd !important;
            transform: scale(1.05);
            opacity: 0.9;
        }


        .navbar i {
            transition: transform 0.3s ease;
        }

        .navbar i:hover {
            transform: scale(1.2);
        }

        .produk-card {
            width: 230px;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            font-family: sans-serif;
            background: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .gambar-produk {
            position: relative;
            width: 100%;
            aspect-ratio: 1/1;
            /* contoh: lebar 4, tinggi 3 */
            overflow: hidden;
        }

        .gambar-produk img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: #f9f9f9;
        }



        .logo-toko img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }



        .info-toko {
            margin-top: -20px;
            margin-bottom: 5px;
        }

        .logo-toko {
            position: static;
            /* Bukan absolute lagi */
            background: white;
            border-radius: 50%;
            padding: 3px;
            width: 40px;
            height: 40px;
            overflow: hidden;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .nama-toko {
            font-size: 10px;
            max-width: 100px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .lokasi-toko-static {
            font-size: 12px;
            background: #333;
            color: white;
            padding: 3px 8px;
            border-radius: 5px;
            white-space: nowrap;
        }


        .detail-produk {
            padding: 10px;
        }

        .nama-produk {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }



        .harga-produk {
            font-size: 16px;
            color: #e60000;
            margin-bottom: 5px;
        }

        .hari-tayang,
        .jam-tayang,
        .kategori-produk {
            font-size: 12px;
            color: #555;
        }

        .produk-wrapper {
            border-top: 1px solid #ddd;
            padding-top: 2rem;
        }

        .produk-container {
            flex-wrap: nowrap;
            /* biar tidak turun ke bawah */
        }

        .produk-card {
            flex: 0 0 auto;
            /* jangan menyusut, tetap pakai lebar default */
            margin-top: 5px;
            margin-left: 10px;
        }

        .scroll-horizontal {
            overflow-x: auto;
            white-space: nowrap;
        }

        .scroll-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: rgba(255, 255, 255, 0.8);
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 2;
        }

        .left-btn {
            left: 0;
        }

        .right-btn {
            right: 0;
        }


        .produk-foto {
            width: 100%;
            max-width: 400px;
            height: 400px;
            object-fit: contain;
            aspect-ratio: 1 / 1;
        }

        .produk-container-wrapper {
            position: relative;
            max-width: calc(230px * 3.5 + 30px);
            /* lebar 3,5 card + padding */
            margin: 0 auto;
            overflow: hidden;
        }

        .produk-container {
            display: flex;
            gap: 10px;
            overflow-x: auto;
            scroll-behavior: smooth;
            padding-bottom: 10px;
        }

        .produk-container::-webkit-scrollbar {
            height: 6px;
        }

        .produk-container::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, 0.15);
            border-radius: 6px;
        }

        /* Default: sembunyikan scrollbar sepenuhnya */
        .produk-container {
            overflow-x: hidden;
            transition: all 0.3s ease;
        }

        /* Saat hover: munculkan scrollbar */
        .produk-container-wrapper:hover .produk-container {
            overflow-x: auto;
        }



        /* Scrollbar styling opsional */
        .scroll-horizontal::-webkit-scrollbar {
            height: 4px;
        }

        .scroll-horizontal::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }

        #jadwalCalendar {
            max-width: 100%;
            height: auto;

            margin: 20px 0;
        }

        .fc-timegrid-axis-cushion {
            font-weight: 600;
            font-size: 13px;
            color: #000;
        }

        .fc-day-today {
            background-color: transparent !important;
        }

        .fc-col-header-cell-cushion {
            font-size: 14px;
            color: black;
            font-weight: 500;
            text-decoration: none;
        }

        .fc-toolbar-title {
            font-size: 16px !important;
        }

        .fc .fc-button {
            font-size: 12px !important;
            /* Ukuran teks */
            padding: 4px 8px !important;
            /* Padding lebih kecil */
            height: auto !important;
            /* Biarkan menyesuaikan tinggi */
        }
    </style>
</head>

