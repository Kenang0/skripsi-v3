    <script>
        // Efek scroll navbar
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            navbar.classList.toggle('scrolled', window.scrollY > 50);
        });

        // Update input tanggal sesuai jumlah pesanan
        function updateTanggalFields(jumlah) {
            const group = document.getElementById('tanggalPengirimanGroup');
            group.innerHTML = "";

            const today = new Date();
            const todayStr = today.toISOString().split('T')[0];

            // Tanggal Start
            const tanggalStart = document.createElement("input");
            tanggalStart.type = "date";
            tanggalStart.className = "form-control";
            tanggalStart.name = jumlah > 1 ? "tanggal_kirim_start" : "tanggal_kirim";
            tanggalStart.id = "tanggal_start";
            tanggalStart.setAttribute("min", todayStr);
            group.appendChild(tanggalStart);

            if (jumlah > 1) {
                const sd = document.createElement("span");
                sd.textContent = "s/d";
                group.appendChild(sd);

                const tanggalEnd = document.createElement("input");
                tanggalEnd.type = "date";
                tanggalEnd.className = "form-control";
                tanggalEnd.name = "tanggal_kirim_end";
                tanggalEnd.id = "tanggal_end";
                tanggalEnd.setAttribute("min", todayStr);
                group.appendChild(tanggalEnd);
            }
        }

        // Ubah jumlah dan panggil update tanggal
        function ubahJumlah(delta) {
            const input = document.getElementById('jumlah');
            let val = parseInt(input.value);
            if (!isNaN(val)) {
                val += delta;
                if (val < 1) val = 1;
                input.value = val;
                updateTanggalFields(val);
            }
        }

        // Saat pertama halaman dimuat
        document.addEventListener("DOMContentLoaded", function () {
            const jumlah = parseInt(document.getElementById("jumlah")?.value) || 1;
            updateTanggalFields(jumlah); // ⛔ ini akan set `min` juga langsung
        });

        function toggleInputNomor() {
            const sumberSelect = document.getElementById("sumber_nomor");
            const uploadInput = document.getElementById("inputDaftarNomor");

            if (sumberSelect && uploadInput) {
                if (sumberSelect.value === "user") {
                    uploadInput.style.display = "block";
                } else {
                    uploadInput.style.display = "none";
                }
            }
        }
    </script>

    <% if (produk.jenis_target.toLowerCase().includes("lba")) { %>
        <script
            src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&libraries=places&callback=initMap"
            async defer></script>
        <% } %>

            <script>
                let map, marker, geocoder;

                function initMap() {
                    const defaultLocation = { lat: -6.200000, lng: 106.816666 }; // Jakarta
                    geocoder = new google.maps.Geocoder(); // ← Inisialisasi Geocoder

                    map = new google.maps.Map(document.getElementById("map"), {
                        center: defaultLocation,
                        zoom: 12,
                        mapTypeControl: false,
                        streetViewControl: false,
                        fullscreenControl: false
                    });

                    marker = new google.maps.Marker({
                        position: defaultLocation,
                        map: map,
                        draggable: true
                    });

                    // Update lat/lng dan alamat saat marker digeser
                    google.maps.event.addListener(marker, 'dragend', function () {
                        const pos = marker.getPosition();
                        updateLatLngInputs(pos.lat(), pos.lng());
                        reverseGeocode(pos); // ← Dapat alamat berdasarkan posisi baru
                    });

                    const input = document.getElementById("inputAlamat");
                    const autocomplete = new google.maps.places.Autocomplete(input);
                    autocomplete.addListener("place_changed", function () {
                        const place = autocomplete.getPlace();
                        if (place.geometry) {
                            const location = place.geometry.location;
                            map.setCenter(location);
                            marker.setPosition(location);
                            map.setZoom(16);
                            updateLatLngInputs(location.lat(), location.lng());
                            document.getElementById("alamat_final").value = place.formatted_address || place.name;
                        }
                    });

                    // Inisialisasi koordinat & alamat awal
                    updateLatLngInputs(defaultLocation.lat, defaultLocation.lng);
                    // reverseGeocode(defaultLocation);
                }

                function updateLatLngInputs(lat, lng) {
                    document.getElementById("latitude").value = lat;
                    document.getElementById("longitude").value = lng;
                }

                function reverseGeocode(latlng) {
                    geocoder.geocode({ location: latlng }, function (results, status) {
                        if (status === "OK") {
                            if (results[0]) {
                                document.getElementById("alamat_final").value = results[0].formatted_address;
                                document.getElementById("inputAlamat").value = results[0].formatted_address;
                            } else {
                                document.getElementById("alamat_final").value = "Alamat tidak ditemukan";
                            }
                        } else {
                            console.error("Geocoder gagal karena: " + status);
                        }
                    });
                }

                window.initMap = initMap;
            </script>

