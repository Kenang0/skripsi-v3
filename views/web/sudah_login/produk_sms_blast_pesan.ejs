    <section style="padding-top: 50px;">
        <div class="container mt-5">
            <div class="card shadow p-4 mx-auto" style="max-width: 900px;">

                <!-- FORM mulai dari sini, membungkus seluruh row -->
                <form action="/produk-sms/pesan/<%= produk.id_produk_iklan %>" method="POST"
                    enctype="multipart/form-data">

                    <div class="row">
                        <!-- KIRI: Form input -->
                        <div class="col-md-7">
                            <!-- Info Toko -->
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <img src="/uploads/profile_pic/<%= produk.photo_vendor %>" class="rounded-circle"
                                    width="40" height="40" style="object-fit: cover;" alt="Foto Toko">
                                <h5 class="mb-0 fw-semibold">
                                    <%= produk.nama_toko_vendor %>
                                </h5>
                                <span class="badge bg-dark">
                                    <%= produk.kota %>
                                </span>
                            </div>

                            <div class="d-flex align-items-start gap-4">
                                <!-- Foto Produk -->
                                <img src="/uploads/produk_img/<%= produk.photo_produk %>" class="img-thumbnail mb-3"
                                    style="max-width: 220px;" alt="Foto Produk">
                                <!-- Teks di samping gambar -->
                                <div>
                                    <h5 class="fw-bold">
                                        <%= produk.nama_produk %>
                                    </h5>
                                    <p class="mb-1">Provider: <%= produk.provider_yang_di_layani %>
                                    </p>
                                    <p>Harga: <strong>Rp <%= produk.harga.toLocaleString("id-ID") %></strong></p>
                                </div>
                            </div>

                            <input type="hidden" name="produk_id" value="<%= produk.id_produk_iklan %>">
                            <input type="hidden" name="tipe_kirim"
                                value="<%= produk.jenis_target.toLowerCase().includes('mms') ? 'mms' : 'sms' %>">

                            <div class="mb-2">
                                <label class="form-label">Masking Sender:</label>
                                <input type="text" class="form-control" name="masking_sender">
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Target Umur:</label>
                                <input type="text" class="form-control" name="target_umur">
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Tipe Device yang Menerima:</label><br>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="tipe_device" value="Android"
                                        id="android">
                                    <label class="form-check-label" for="android">Android</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="tipe_device" value="Apple"
                                        id="apple">
                                    <label class="form-check-label" for="apple">Apple</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="tipe_device"
                                        value="All Device" id="all">
                                    <label class="form-check-label" for="all">All Device</label>
                                </div>
                            </div>

                            <div class="row mb-2 align-items-end">
                                <div class="col tanggal-wrap">
                                    <label class="form-label">Tanggal Pengiriman:</label>
                                    <div class="d-flex gap-2 align-items-center" id="tanggalPengirimanGroup">
                                        <input type="date" class="form-control" name="tanggal_kirim" id="tanggal_start">
                                    </div>
                                </div>
                                <div class="col">
                                    <label class="form-label">Jam Pengiriman:</label>
                                    <input type="time" class="form-control" name="jam_kirim">
                                </div>
                            </div>


                            <% if (!produk.jenis_target.toLowerCase().includes("lba")) { %>
                                <div class="mb-2">
                                    <label class="form-label">Sumber Nomor Tujuan:</label>
                                    <select class="form-select" name="sumber_nomor" id="sumber_nomor"
                                        onchange="toggleInputNomor()">
                                        <option value="vendor">Gunakan dari Vendor</option>
                                        <option value="user">Upload Daftar Nomor Sendiri</option>
                                    </select>
                                </div>
                                <div class="mb-2" id="inputDaftarNomor" style="display: none;">
                                    <label class="form-label">Upload File Daftar Nomor (PDF)</label>
                                    <input type="file" class="form-control" name="file_nomor_sms_pdf"
                                        accept="application/pdf">
                                </div>
                                <% } %>

                                    <% if (produk.jenis_target.toLowerCase().includes("mms")) { %>
                                        <div class="mb-2">
                                            <label class="form-label">Upload Gambar (untuk MMS):</label>
                                            <input type="file" class="form-control" name="file_foto_mms" value="mms">
                                        </div>
                                        <% } %>

                                            <div class="mb-2">
                                                <label class="form-label">Kata-kata Pesan:</label>
                                                <input type="text" class="form-control" name="teks_iklan_sms">
                                            </div>

                                            <% if (produk.jenis_target.toLowerCase().includes("lba")) { %>
                                                <div class="mb-2">
                                                    <label class="form-label">Alamat Lokasi Target:</label>
                                                    <input type="text" class="form-control" id="inputAlamat"
                                                        placeholder="Contoh: Jl. Jend. Sudirman No.1, Jakarta">
                                                </div>
                                                <div class="mb-2">
                                                    <label class="form-label">Tandai Lokasi di Peta:</label>
                                                    <div id="map"
                                                        style="text-align: center; height: 300px; width: 100%;">
                                                    </div>
                                                    <input type="hidden" name="latitude" id="latitude">
                                                    <input type="hidden" name="longitude" id="longitude">
                                                    <input type="hidden" name="alamat_target_sms" id="alamat_final">
                                                </div>
                                                <% } %>

                                                    <div class="mb-2">
                                                        <label class="form-label">Nomor Penerima Bukti
                                                            Tayang:</label>
                                                        <input type="text" class="form-control"
                                                            name="nomor_penerima_bukti_tayang"
                                                            placeholder="08xxxxxxxxxx">
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="form-label">Catatan:</label>
                                                        <textarea class="form-control" rows="3"
                                                            name="catatan"></textarea>
                                                    </div>
                        </div>

                        <!-- KANAN: Gambar dan jumlah -->
                        <div class="col-md-5 text-center">

                            <div class="mb-3">
                                <label class="form-label">Jumlah Pemesanan:</label>
                                <div class="input-group justify-content-center" style="max-width: 150px; margin: auto;">
                                    <button class="btn btn-outline-secondary" type="button"
                                        onclick="ubahJumlah(-1)">-</button>
                                    <input type="number" class="form-control text-center" name="jumlah" value="1"
                                        min="1" id="jumlah">
                                    <button class="btn btn-outline-secondary" type="button"
                                        onclick="ubahJumlah(1)">+</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <button class="btn btn-primary mt-3">Ajukan Pemesanan</button>
                    </div>
