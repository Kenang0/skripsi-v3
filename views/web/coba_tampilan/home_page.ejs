      padding-top: 2rem;
    }

    .produk-container {
      flex-wrap: nowrap;
      /* biar tidak turun ke bawah */
    }

    .produk-card {
      flex: 0 0 auto;
      /* jangan menyusut, tetap pakai lebar default */
      margin-top: 5px;
      margin-left: 10px;
    }

    .scroll-horizontal {
      overflow-x: auto;
      white-space: nowrap;
    }

    .scroll-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      border: none;
      background: rgba(255, 255, 255, 0.8);
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
      width: 30px;
      height: 30px;
      border-radius: 50%;
      cursor: pointer;
      z-index: 2;
    }

    .left-btn {
      left: 0;
    }

    .right-btn {
      right: 0;
    }

    .produk-container-wrapper {
      position: relative;
      max-width: calc(230px * 3.5 + 30px);
      /* lebar 3,5 card + padding */
      margin: 0 auto;
      overflow: hidden;
    }

    .produk-container {
      display: flex;
      gap: 10px;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding-bottom: 10px;
